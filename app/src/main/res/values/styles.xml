<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="StyleRatingBar" parent="Theme.AppCompat">
    <item name="colorControlNormal">@color/text_secondary</item>
    <item name="colorControlActivated">@color/text_accent</item>
  </style>

  <style name="StyleImageActor">
    <item name="android:layout_width">80dp</item>
    <item name="android:layout_height">80dp</item>
    <item name="android:scaleType">centerCrop</item>
    <item name="android:adjustViewBounds">true</item>
  </style>

  <style name="circleImageViewStyle">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">4dp</item>
  </style>
</resources>