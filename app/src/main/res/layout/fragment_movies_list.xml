<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".FragmentMoviesList">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/background_primary">

    <Button
        android:id="@+id/movies_list_main_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/movies_list_top_gap"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="start|center_vertical"
        android:text="@string/movies_list_label"
        android:textAllCaps="false"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        app:drawableLeftCompat="@drawable/ic_combined_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/movie_card"
        android:layout_width="@dimen/movies_list_card_width"
        android:layout_height="@dimen/movies_list_card_height"
        android:layout_marginStart="@dimen/movies_list_main_margin_start"
        android:layout_marginTop="18dp"
        app:cardBackgroundColor="@color/background_primary"
        app:cardCornerRadius="@dimen/movies_list_card_radius"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movies_list_main_btn"
        app:rippleColor="@android:color/transparent"
        app:strokeColor="@color/cardview_dark_background"
        app:strokeWidth="1dp">

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/bg">

        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="match_parent"
            android:layout_height="@dimen/movies_list_poster_height"
            android:layout_marginStart="@dimen/movies_list_poster_margin"
            android:layout_marginTop="@dimen/movies_list_poster_margin"
            android:layout_marginEnd="@dimen/movies_list_poster_margin"
            android:contentDescription="@string/movies_list_poster_description"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/avengers_poster" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/movies_list_poster_height"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_to_top_gradient"
            app:layout_constraintBottom_toBottomOf="@+id/movie_poster"
            app:layout_constraintEnd_toEndOf="@+id/movie_poster"
            app:layout_constraintStart_toStartOf="@+id/movie_poster"
            app:layout_constraintTop_toTopOf="@+id/movie_poster"
            />

        <TextView
            android:id="@+id/movie_list_rating"
            android:layout_width="@dimen/movies_list_card_age_rect_size"
            android:layout_height="@dimen/movies_list_card_age_rect_size"
            android:layout_margin="8dp"
            android:background="@drawable/rect_rounded"
            android:gravity="center"
            android:text="@string/movie_list_age"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/ic_like"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/movie_genre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="@string/movie_genre"
            android:textColor="@color/text_accent"
            android:textSize="8sp"
            app:layout_constraintBottom_toTopOf="@+id/movie_rating"
            app:layout_constraintStart_toStartOf="@+id/movie_rating" />

        <RatingBar
            android:id="@+id/movie_rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="10dp"
            android:isIndicator="true"
            android:numStars="5"
            android:padding="0dp"

            android:rating="4"
            android:theme="@style/StyleRatingBar"
            app:layout_constraintBottom_toBottomOf="@+id/movie_poster"
            app:layout_constraintStart_toStartOf="@+id/movie_poster" />

        <TextView
            android:id="@+id/movie_review_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="@string/_125_reviews"
            android:textAllCaps="true"
            android:textColor="@color/text_secondary"
            android:textSize="8sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/movie_rating"
            app:layout_constraintStart_toEndOf="@id/movie_rating"
            app:layout_constraintTop_toTopOf="@id/movie_rating" />

        <TextView
            android:id="@+id/movie_title"
            android:text="@string/movie_title"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_poster"/>

        <TextView
            android:id="@+id/movie_length"
            android:text="@string/movie_list_movie_duration"
            android:textColor="@color/text_secondary"
            android:textSize="8sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginStart="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_title"/>
      </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
